{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "quotes": [
      "error", 
      "single", 
      { "allowTemplateLiterals": true }
    ],
    "no-console": [
      "warn",
      { "allow": ["warn", "error"] }
    ]
  }
}